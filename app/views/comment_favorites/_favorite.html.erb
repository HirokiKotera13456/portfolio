  <% if dog_comment.favorited_by?(current_user) %>
      <%= link_to dog_dog_comment_comment_favorites_path(dog.id, dog_comment.id), method: :delete do %>
        <i class="fas fa-dog like-btn"><%= dog_comment.comment_favorites.count %> いいね</i>
      <% end %>
  <% else %>
      <%= link_to dog_dog_comment_comment_favorites_path(dog.id, dog_comment.id), method: :post do %>
        <i class="fas fa-bone unlike-btn"><%= dog_comment.comment_favorites.count %> いいね</i>
      <% end %>
  <% end %>