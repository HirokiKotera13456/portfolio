<p class="<%= direct_message.id %>">
    <%= attachment_image_tag direct_message.user, :profile_image, fallback: "no_image.jpg", class:"profile-img-circle", size: "100x100" %>
</p>
<p class="<%= direct_message.id %>">
    <span class="balloon1-top">
        <div class="DMusername">ユーザー名：<%= direct_message.user.name %><br></div>
        <div class="DMtime"><%= direct_message.created_at.strftime("%Y/%m/%d %H:%M") %><br></div>
        <h2 class="DMcontent"><%= direct_message.message %><br></h2>

    </span>
</p><br>

