<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="dog-title"><strong>質問一覧</strong></h2>
      <table class="table table-hover condensed ">
        <thead>
          <tr>
            <th></th>
            <th style="width:50px;">犬種</th>
            <th scope="col">質問内容</th>
            <th style="width:100px;">ユーザー</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @dogs.each do |dog| %>
          <tr>
            <td style="width:100px;">
              <%= link_to dog_path(dog.id) do %>
                <%= attachment_image_tag dog, :image, size: "150x150" %>
              <% end %>
            </td>
            <td>
            <%= dog.name %>
            </td>
            <td>
            <%= dog.caption %>
            </td>
            <td>
            <%= dog.user.name %>
            </td>
            <td>
              <%= link_to dog_path(dog.id) do  %>
                <p class="btn btn-success m-2" >投稿詳細へ</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @dogs %>
    </div>
  </div>
</div>