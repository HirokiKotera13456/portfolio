<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h2 class="dog-title"><strong>Dogs</strong></h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th><p>犬種</p></th>
            <th><p>ワンちゃんについて</p></th>
            <th><p>ユーザーネーム</p></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @dogs.each do |dog| %>
          <tr>
            <td>
              <%= link_to dog_path(dog.id) do %>
                <%= attachment_image_tag dog, :image, size: "300x300" %>
              <% end %>
            </td>
            <td>
            <p><%= dog.name %></p>
            </td>
            <td>
            <p><%= dog.caption %></p>
            </td>
            <td>
            <p><%= dog.user.name %></p>
            </td>
            <td>
              <%= link_to dog_path(dog.id) do %>
                <p>投稿詳細へ</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>