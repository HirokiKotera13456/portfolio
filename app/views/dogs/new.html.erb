<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2 class="mt-3"><p>ワンちゃんの情報入力フォーム(*は必須マークです)</p></h2>
      <%= render "dogs/error", model: @newdog %>
        <%= form_with model: @newdog, local: true do |f| %>
          <div class="form-group ">
            <%= f.label :画像 %>
            <%= f.attachment_field :image, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :犬種  %>*
            <%= f.text_field :name, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :質問内容 %>*
            <%= f.text_area :caption, class:"form-control" %>
          </div>

          <div class="check_box">
              <%= f.label :カテゴリー %>
              <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
              <div>
                <%= tag.label do %>
                  <%= tag.check_box %>
                  <%= tag.text %>
                <% end %>
              </div>
            <% end %>
          </div>


          <%= f.submit "投稿", class:"btn btn-success m-2 btn-question" %>
        <% end %>
    </div>
  </div>
</div>