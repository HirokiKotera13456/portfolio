<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h2 class="mt-3"><p>ワンちゃんの情報入力フォーム</p></h2>
        <%= form_with model: @newdog, local: true do |f| %>
          <div class="form-group py-3">
            <%= f.label :画像 %>
            <%= f.attachment_field :image, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :犬種 %>
            <%= f.text_field :name, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :説明 %>
            <%= f.text_area :caption, class:"form-control" %>
          </div>
          <%= f.submit "投稿", class:"btn btn-success m-2" %>
        <% end %>
    </div>
  </div>
</div>