<div class="container mt-3">
  <div class="row">
    <div class="col-10 offset-1 ">
      <h2><p><%= @dog.user.name %>さんの投稿一覧</p></h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th><p>犬種</p></th>
            <th><p>ワンちゃんについて</p></th>
            <th><p>ユーザーネーム</p></th>
            <th><p>投稿日時</p></th>
            <th><p></p></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
            <%= attachment_image_tag @dog, :image, size: "200x200" %>
            </td>
            <td>
            <p><%= @dog.name %></p>
            </td>
            <td>
            <p><%= @dog.caption %></p>
            </td>
            <td>
            </td>
            <td>
              <p><%= @dog.user.name %></p>
            </td>
            <td>
            <p><%= @dog.created_at.strftime('%Y/%m/%d') %></p>
            </td>
            <td>
            <% if @dog.user == current_user %>
              <%= link_to "編集", edit_dog_path %>
              <p></p>
              <%= link_to "削除", dog_path(@dog), method: :delete %>
            <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
