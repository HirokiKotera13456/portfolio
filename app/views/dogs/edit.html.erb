<h2 class="mt-3">ワンちゃんの情報入力フォーム</h2>
  <%= form_with model: @dog, local: true do |f| %>
    <div class="form-group">
      <%= f.label :画像 %>
      <%= f.attachment_field :image, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :犬種 %>
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :説明 %>
      <%= f.text_area :caption, class:"form-control" %>
    </div>
    <%= f.submit "編集", class:"btn btn-success" %>
  <% end %>