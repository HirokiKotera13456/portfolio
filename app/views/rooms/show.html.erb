<div class="container mt-3">
  <div class="row">
    <div class="col-md-8 offset-md-2 ">
      <div class="DirectMessage">ダイレクトメッセージ
      <div class="DMuser">
        (<% @entries.each do |e| %>
          <%= link_to e.user.name, user_path(e.user_id),class:"userLink" %>
        <% end %>)
      </div>
      </div>
      <div id="direct_messages" data-room_id="<%= @room.id %>">
        <%= render @direct_messages %>
      </div>
      <form>
        <input type="text" id="chat-input" data-behavior="room_speaker">
      </form>
    </div>
  </div>
</div>